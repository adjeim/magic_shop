<h2>Our Products</h2>
<div class="product-container">
	<% @products.each do |product| %>
		<div class="product-card">
			<h3 class="product-name"><%= product.name %></h3>
			<img src="http://lorempixel.com/150/210/abstract">
			<p><%= product.description %></p>
			<p><%= product.price %></p>
		</div>
	<% end %>
</div>